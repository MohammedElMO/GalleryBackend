{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "target": "es6",
    "baseUrl": "src",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowArbitraryExtensions": true,
    "allowSyntheticDefaultImports": true
    ,
  },
  "lib": ["es2015"],
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
}
